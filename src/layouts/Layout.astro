---
import "@/styles/globals.css";

interface Props {
  title: string;
}

const { title } = Astro.props;

const urls = [
  {
    url: "/",
    title: "Home",
  },
  {
    url: "/blog",
    title: "Blog",
  },
  {
    url: "/work",
    title: "Work",
  },
  {
    url: "/projects",
    title: "Projects",
  },
];

const year = new Date().getFullYear();
---

<!doctype html>
<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Jordi's website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="https://emojicdn.elk.sh/🍊" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Shantell+Sans:ital,wght@0,500;1,500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="antialiased bg-brand-white text-neutral-900 dark:bg-[#21201D] pt-40 selection:bg-brand-orange/10 selection:text-brand-orange/90"
  >
    <header class="max-w-screen-sm mx-auto"></header>
    <slot />
    <footer class="fixed bottom-0 w-full">
      <div class="max-w-screen-sm mx-auto p-4">
        <p class="text-neutral-500 text-xs">
          © {year} Jordi. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
